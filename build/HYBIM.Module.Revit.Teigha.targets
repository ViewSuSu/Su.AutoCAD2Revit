<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<Target Name="CopyTeighaLibFilesFromPackage" AfterTargets="Build">
		<ItemGroup>
			<TeighaLibFiles Include="$(MSBuildThisFileDirectory)..\contentFiles\any\$(TargetFramework)\lib\*.*" />
		</ItemGroup>

		<Message Text="Copying Teigha library files from NuGet package to output directory: $(OutputPath)" Importance="high" />
		<Copy SourceFiles="@(TeighaLibFiles)"
			  DestinationFolder="$(OutputPath)"
			  SkipUnchangedFiles="true"
			  Condition="Exists('%(TeighaLibFiles.RootDir)%(TeighaLibFiles.Directory)')" />
	</Target>

	<Target Name="CopyTeighaLibFilesFromPackageOnPublish" AfterTargets="Publish">
		<ItemGroup>
			<TeighaLibFiles Include="$(MSBuildThisFileDirectory)..\contentFiles\any\$(TargetFramework)\lib\*.*" />
		</ItemGroup>

		<Message Text="Copying Teigha library files from NuGet package to publish directory: $(PublishDir)" Importance="high" />
		<Copy SourceFiles="@(TeighaLibFiles)"
			  DestinationFolder="$(PublishDir)"
			  SkipUnchangedFiles="true"
			  Condition="Exists('%(TeighaLibFiles.RootDir)%(TeighaLibFiles.Directory)')" />
	</Target>

</Project>